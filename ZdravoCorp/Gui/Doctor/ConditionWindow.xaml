<Window x:Class="ZdravoCorp.Gui.Doctor.ConditionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZdravoCorp.Gui.Doctor"
        mc:Ignorable="d"
        Title="Add condition" Height="250" Width="380">
    <Grid>
        <TextBox x:Name="conditionName" HorizontalAlignment="Left" Height="30" Margin="163,44,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="187" FontSize="15"/>
        <Label Content="Condition name" HorizontalAlignment="Left" Margin="21,44,0,0" VerticalAlignment="Top" FontSize="15" FontWeight="Bold"/>
        <Label Content="Condition date" HorizontalAlignment="Left" Margin="21,0,0,0" VerticalAlignment="Center" FontSize="15" FontWeight="Bold"/>
        <DatePicker x:Name="conditionDate" HorizontalAlignment="Left" Height="30" Margin="163,0,0,0" VerticalAlignment="Center" Width="187" FontSize="15"/>
        <Button x:Name="addCondition" Content="Add condition" HorizontalAlignment="Left" Height="37" Margin="216,167,0,0" VerticalAlignment="Top" Width="134" FontSize="15" FontWeight="Bold" Background="#FF5BF97A" Click="addCondition_Click"/>

    </Grid>
</Window>
